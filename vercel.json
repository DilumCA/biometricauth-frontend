{
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; connect-src 'self' https://biometricauth-backend-production.up.railway.app https://ipapi.co https://nominatim.openstreetmap.org http://localhost:5000;"
        },
        { 
          "key": "X-Content-Type-Options", 
          "value": "nosniff" 
        },
        { 
          "key": "Permissions-Policy", 
          "value": "publickey-credentials-get=*, publickey-credentials-create=*, geolocation=*, microphone=(), camera=(), payment=(), usb=(), magnetometer=(), gyroscope=(), speaker=()" 
        }
      ]
    }
  ],
  "rewrites": [
    { 
      "source": "/(.*)", 
      "destination": "/" 
    }
  ]
}